@model ControleEstoque.Models.Movimentacao

@{
    ViewData["Title"] = "Excluir Movimentação #" + Model.IDMovimentacao;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>Tem certeza que deseja excluir esta movimentação?</p>
<p><strong>Nota:</strong> os produtos movimentados serão devolvidos.</p>

<div class="box">
    <div class="col-md-9">
        <dl class="row mb-0 pb-0">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class="col-sm-9">
                @if (Model.Tipo == 0)
                {
                    <span class="text-success"><i class="fa fa-long-arrow-alt-left mr-5"></i> Entrada</span>
                }
                else if (Model.Tipo == 1)
                {
                    <span class="text-danger"><i class="fa fa-long-arrow-alt-right mr-5"></i> Saída</span>
                }
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-3">
                Código do Produto
            </dt>
            <dd class="col-sm-9">
                #@Html.DisplayFor(model => model.IDProduto)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.PrecoTotal)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PrecoTotal)
            </dd>


            @if (Model.Tipo == 0)
            {
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IDFornecedor)
                </dt>
                <dd class="col-sm-9">
                    @{ Fornecedor fornecedor = ViewData["Fornecedor"] as Fornecedor; }

                    @fornecedor.NomeFantasia
                </dd>
            }
            else if (Model.Tipo == 1)
            {
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IDCliente)
                </dt>
                <dd class="col-sm-9">
                    @{ Cliente cliente = ViewData["Cliente"] as Cliente; }

                    @cliente.NomeFantasia
                </dd>
            }

        </dl>
    </div>

    <div class="clearfix"></div>
</div>

<form asp-action="Excluir">
    <input type="hidden" asp-for="IDMovimentacao" />
    <input type="submit" value="Excluir" class="btn btn-danger mr-10" />
    <a asp-action="Index" class="btn btn-secondary mr-10">Voltar para a lista</a>
</form>

@section Scripts {
    <script>
    $(document).ready(function () {
        $(".btn-nav-movimentacao").addClass(" active");
    });
    </script>
}
