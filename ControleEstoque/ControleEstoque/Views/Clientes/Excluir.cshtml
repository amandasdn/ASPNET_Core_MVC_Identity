@model ControleEstoque.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente #" + Model.IDCliente;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>Tem certeza que deseja excluir este cliente?</p>

<div class="box">
    <dl class="row mb-0">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.IDCliente)
        </dt>
        <dd class="col-sm-8">
            #@Html.DisplayFor(model => model.IDCliente)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.NomeFantasia)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.RazaoSocial)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>

    </dl>

</div>

<form asp-action="Excluir">
    <input type="hidden" asp-for="IDCliente" />
    <input type="submit" value="Excluir" class="btn btn-danger mr-10" />
    <a asp-action="Index" class="btn btn-secondary mr-10">Voltar para a lista</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".btn-nav-clientes").addClass(" active");
        });
    </script>
}