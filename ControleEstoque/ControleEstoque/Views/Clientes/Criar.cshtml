@model ControleEstoque.Models.Cliente

@{
    ViewData["Title"] = "Cadastrar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar Cliente</h1>

<form asp-action="Criar">
    <div class="box">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="IDCliente" />

        <div class="col-md-6 form-group">
            <label asp-for="NomeFantasia" class="control-label"></label>
            <input asp-for="NomeFantasia" class="form-control" />
            <span asp-validation-for="NomeFantasia" class="text-danger"></span>
        </div>

        <div class="col-md-6 form-group">
            <label asp-for="RazaoSocial" class="control-label"></label>
            <input asp-for="RazaoSocial" class="form-control" />
            <span asp-validation-for="RazaoSocial" class="text-danger"></span>
        </div>

        <div class="col-md-5 form-group">
            <label asp-for="CNPJ" class="control-label"></label>
            <input asp-for="CNPJ" class="form-control cnpj" data-mask="00.000.000/0000-00" data-mask-reverser="false" />
            <span asp-validation-for="CNPJ" class="text-danger"></span>
        </div>

        <div class="col-md-3 form-group">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" data-mask="(00) 0000-0000" data-mask-reverser="false" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="col-md-4 form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="clearfix"></div> <hr>

        <div class="col-md-4 form-group">
            <label asp-for="CEP" class="control-label"></label>
            <input asp-for="CEP" class="form-control frmCep" data-mask="00000-000" data-mask-reverser="false" maxlength="9" />
            <span asp-validation-for="CEP" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Endereco" class="control-label"></label>
            <input asp-for="Endereco" class="form-control frmEndereco" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control frmNumero" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Complemento" class="control-label"></label>
            <input asp-for="Complemento" class="form-control frmComplemento" />
            <span asp-validation-for="Complemento" class="text-danger"></span>
        </div>
        <div class="col-md-1 form-group">
            <label asp-for="UF" class="control-label"></label>
            <input asp-for="UF" class="form-control frmUF" maxlength="2" />
            <span asp-validation-for="UF" class="text-danger"></span>
        </div>
        <div class="col-md-3 form-group">
            <label asp-for="Cidade" class="control-label"></label>
            <input asp-for="Cidade" class="form-control frmCidade" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Bairro" class="control-label"></label>
            <input asp-for="Bairro" class="form-control frmBairro" />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>

        <div class="clearfix"></div>

    </div>

    <div>
        <input type="submit" value="Salvar" class="btn btn-success mr-10" />
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $(".btn-nav-clientes").addClass(" active");
        });
    </script>

    <script src="~/js/cep.js"></script>
}
